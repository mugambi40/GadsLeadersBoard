<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:elevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/top_learner_badge"
            android:layout_width="90dp"
            android:contentDescription="@string/top_learner_badge"
            android:layout_height="90dp"
            android:src="@drawable/top_learner"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/top_learner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/top_learner_badge"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_learner_name"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/top_learner_hours_country"
            android:layout_toRightOf="@+id/top_learner_badge"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>